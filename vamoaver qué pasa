
/* Ejercicio 1: Números Pares e Impares
*Instrucciones: Escribe un programa que solicite al usuario un número y determine si es par o impar.*/
let number = prompt("escribe un número");
if (number % 2 == 0){
    console.log ("es un número par");
} else{
    console.log("es un número impar");
}

